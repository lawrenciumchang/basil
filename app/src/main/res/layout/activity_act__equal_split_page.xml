<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lawrencium.basil.Act_EqualSplitPage">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/equalTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:hint="Title"
        android:singleLine="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/equalCategory"
        android:layout_below="@+id/equalTitle"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/equalAmount"
        android:layout_below="@+id/equalCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/equalCategory"
        android:hint="Total Amount"
        android:singleLine="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/equalNumber"
        android:layout_below="@+id/equalAmount"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:hint="Number of People"
        android:singleLine="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/equalNext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/equalNumber"
        android:onClick="equalNext"/>

</RelativeLayout>
