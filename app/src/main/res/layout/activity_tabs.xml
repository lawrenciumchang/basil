<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lawrencium.basil.tabs">

    <TextView android:text="You can manage your tabs here." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:text="Equal Split"
        android:onClick="equalSplit" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:text="Customized Split"
        android:onClick="customizedSplit" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:text="IOUs"
        android:onClick="iou" />

</RelativeLayout>
